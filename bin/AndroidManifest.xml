<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ACM.binarycalculator"
    android:versionCode="7"
    android:versionName="2.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="org.holoeverywhere.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/release_name"
        android:theme="@style/Holo.Theme" >
        <activity
            android:name="com.ACM.binarycalculator.Activities.CalculatorPagerActivity"
            android:label="@string/release_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name = "com.ACM.binarycalculator.Activities.CalculatorFloatingPointActivity" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>